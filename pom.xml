<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>info.bonjean</groupId>
	<artifactId>beluga</artifactId>
	<version>0.3</version>
	<name>Beluga</name>
	<description>Beluga Player</description>
	<url>http://github.com/jbonjean/beluga</url>
	<developers>
		<developer>
			<id>jbonjean</id>
			<name>Julien Bonjean</name>
			<email>julien@bonjean.info</email>
		</developer>
	</developers>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<swt.version>3.8</swt.version>
		<slf4j.version>1.6.4</slf4j.version>
		<logback.version>1.0.1</logback.version>
		<dnsjava.version>2.1.1</dnsjava.version>
		<twinkle.version>1.0.0</twinkle.version>
		<xom.version>1.2.5</xom.version>
		<gson.version>2.2.2</gson.version>
		<vlcj.version>2.1.0</vlcj.version>
		<httpclient.version>4.2.1</httpclient.version>
		<commons-io.version>1.3.2</commons-io.version>
		<commons-codec.version>1.7</commons-codec.version>
		<junit.version>4.8.1</junit.version>
		<dj-nativeswing.version>1.0.2.20120308</dj-nativeswing.version>
		<maven-shade-plugin.version>2.0</maven-shade-plugin.version>
		<maven-compiler-plugin.version>2.5.1</maven-compiler-plugin.version>
		<maven-surefire-plugin.version>2.12.4</maven-surefire-plugin.version>
		<launch4j-maven-plugin.version>1.5.2</launch4j-maven-plugin.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>${maven-shade-plugin.version}</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<transformers>
						<transformer
							implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
							<mainClass>info.bonjean.beluga.Main</mainClass>
						</transformer>
					</transformers>
					<outputFile>${jar.output.dir}/${project.artifactId}-${swt.platform}-${project.version}.jar</outputFile>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>${maven-surefire-plugin.version}</version>
				<configuration>
					<skipTests>true</skipTests>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>${slf4j.version}</version>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<version>${logback.version}</version>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-core</artifactId>
			<version>${logback.version}</version>
		</dependency>
		<dependency>
			<groupId>dnsjava</groupId>
			<artifactId>dnsjava</artifactId>
			<version>${dnsjava.version}</version>
		</dependency>
		<dependency>
			<groupId>ch.swingfx</groupId>
			<artifactId>twinkle</artifactId>
			<version>${twinkle.version}</version>
		</dependency>
		<dependency>
			<groupId>xom</groupId>
			<artifactId>xom</artifactId>
			<version>${xom.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>xml-apis</artifactId>
					<groupId>xml-apis</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>${gson.version}</version>
		</dependency>
		<dependency>
			<groupId>uk.co.caprica</groupId>
			<artifactId>vlcj</artifactId>
			<version>${vlcj.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>${httpclient.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>${commons-io.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>${commons-codec.version}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>chrriis</groupId>
			<artifactId>dj-nativeswing</artifactId>
			<version>${dj-nativeswing.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>swt</artifactId>
					<groupId>org.eclipse</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.eclipse.swt</groupId>
			<artifactId>org.eclipse.swt.${swt.platform}</artifactId>
			<version>${swt.version}</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>caprica</id>
			<name>Caprica Software</name>
			<url>http://www.capricasoftware.co.uk/repo</url>
		</repository>
		<repository>
			<id>nativeswing</id>
			<name>DJ Native Swing</name>
			<url>http://repository.jspresso.org/maven2/</url>
		</repository>
		<repository>
			<id>swt</id>
			<name>SWT</name>
			<url>http://swt-repo.googlecode.com/svn/repo</url>
		</repository>
	</repositories>

	<profiles>
		<profile>
			<id>dist-linux-64</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<swt.platform>gtk.linux.x86_64</swt.platform>
				<jar.output.dir>dist/linux</jar.output.dir>
			</properties>
		</profile>
		<profile>
			<id>dist-linux-32</id>
			<properties>
				<swt.platform>gtk.linux.x86</swt.platform>
				<jar.output.dir>dist/linux</jar.output.dir>
			</properties>
		</profile>
		<profile>
			<id>dist-windows-32</id>
			<properties>
				<swt.platform>win32.win32.x86</swt.platform>
				<jar.output.dir>target</jar.output.dir>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>com.akathist.maven.plugins.launch4j</groupId>
						<artifactId>launch4j-maven-plugin</artifactId>
						<version>${launch4j-maven-plugin.version}</version>
						<executions>
							<execution>
								<id>l4j-clui</id>
								<phase>package</phase>
								<goals>
									<goal>launch4j</goal>
								</goals>
								<configuration>
									<downloadUrl>http://java.com/en/download/manual_v6.jsp</downloadUrl>
									<vars>
										<var>PATH=%PATH%;C:\\Program Files (x86)\\VideoLAN\\VLC</var>
									</vars>
									<jre>
										<path>third.party/jre6</path>
										<minVersion>1.6.0</minVersion>
										<maxVersion>1.6.1</maxVersion>
									</jre>
									<singleInstance>
									</singleInstance>
									<headerType>gui</headerType>
									<outfile>dist/win32/${project.artifactId}-${swt.platform}-${project.version}.exe</outfile>
									<jar>target/${project.artifactId}-${swt.platform}-${project.version}.jar</jar>
									<classPath>
										<mainClass>info.bonjean.beluga.Main</mainClass>
										<addDependencies>false</addDependencies>
										<preCp>anything</preCp>
									</classPath>
									<versionInfo>
										<fileVersion>${project.version}.0.0</fileVersion>
										<txtFileVersion>${project.version}</txtFileVersion>
										<fileDescription>${project.description}</fileDescription>
										<copyright>Julien Bonjean</copyright>
										<productVersion>${project.version}.0.0</productVersion>
										<txtProductVersion>${project.version}</txtProductVersion>
										<productName>${project.name}</productName>
										<internalName>${project.artifactId}</internalName>
										<originalFilename>${project.artifactId}-${swt.platform}-${project.version}.exe</originalFilename>
									</versionInfo>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
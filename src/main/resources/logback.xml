<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss} %-5level %logger{0} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="info.bonjean.beluga.util.HTTPUtil">
		<level value="INFO" />
	</logger>

	<logger name="info.bonjean.beluga.gui.UIBrowserListener">
		<level value="INFO" />
	</logger>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
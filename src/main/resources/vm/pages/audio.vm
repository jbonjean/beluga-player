<html>
	<head>
		<style type="text/css">
			#parse( "jplayer/jplayer.blue.monday.css" )
			#parse( $HTMLUtil.getThemeResourcePath("css/common.css") )
			#parse( $HTMLUtil.getThemeResourcePath("css/${page}.css") )
		</style>
		<script type="text/javascript">
			#include( "jquery/jquery-1.8.3.min.js" )
			#include( "jplayer/jquery.jplayer.min.js" )
			#parse( $HTMLUtil.getThemeResourcePath("js/common.js") )
			#parse( $HTMLUtil.getThemeResourcePath("js/${page}.js") )
		</script>
	</head>
	<body onselectstart="return false;">
	
		#if( $debug )
			<div id="debug">
				<a href="command://goto/$page">Reload</a>
			</div>
		#end
		
		#if( !$song )
			<div id="loader" style="display: block">
			</div>
		#end
		
	    <div id="jquery_jplayer_1" class="jp-jplayer"></div>

		<a href="command://next" class="next" title="$text['next']"></a>
		<div id="jp_container_1" class="jp-audio">
			<div class="jp-type-single">
				<div class="jp-gui jp-interface">
					<ul class="jp-controls">
						<li><a href="javascript:;" class="jp-play" tabindex="1" title="$text['play']"></a></li>
						<li><a href="javascript:;" class="jp-pause" tabindex="1" title="$text['pause']"></a></li>
						<li><a href="javascript:;" class="jp-mute" tabindex="1" title="$text['mute']"></a></li>
						<li><a href="javascript:;" class="jp-unmute" tabindex="1" title="$text['unmute']"></a></li>
						<li><a href="javascript:;" class="jp-volume-max" tabindex="1" title="$text['max.volume']"></a></li>
					</ul>
					<div class="jp-progress">
							<div class="jp-play-bar"></div>
					</div>
					<div class="jp-volume-bar">
						<div class="jp-volume-bar-value"></div>
					</div>
					<div class="jp-time-holder">
						<div class="jp-current-time"></div>
						<div class="jp-duration"></div>
					</div>
				</div>
			</div>
		</div>
	
	</body>
</html>
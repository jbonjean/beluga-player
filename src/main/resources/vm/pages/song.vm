#parse("vm/header.vm")

<div class="mainControls">
	<div class="stationSelect">
		<select  id="stationSelect" onchange="document.location='command://select-station/' + document.getElementById('stationSelect').options[document.getElementById('stationSelect').selectedIndex].value">
			#foreach( $stationLocal in $stations )
				<option value="$stationLocal.getStationId()" #if ($stationLocal.getStationId() == $station.getStationId()) selected #end>$stationLocal.getStationName()</option>
			#end
		</select>
	</div>
	<div class="drop-menu">
		<div class="title"><span class="plus">+</span>$text['menu']</div>
		<ul class="sub-menu">
			<li><a href="command://goto/station-add"><img src="$HTMLUtil.getImage("Add-32.png")" border="0">$text['add.station']</a></li>
			#if (! $station.isQuickMix())
				<li><a href="javascript:deleteStation();"><img src="$HTMLUtil.getImage("Delete-32.png")" border="0">$text['delete.station']</a></li>
			#end
			<li><a href="command://goto/station-details"><img class="empty" src="" border="0">$text['station.details']</a></li>
			<li><a href="command://goto/configuration"><img src="$HTMLUtil.getImage("Settings-32.png")" border="0">$text['settings']</a></li>
			<li><a href="command://goto/about"><img class="empty" src="" border="0">$text['about']</a></li>
			<li><a href="command://exit"><img class="empty" src="" border="0">$text['exit']</a></li>
		</ul>
	</div>
	<div class="clear"></div>
</div>


<div class="content">
	<div class="albumCover">
		<img id="cover" class="cover" src="data:image/png;base64,$song.getAlbumArtBase64()"/>
		<div class="albumTitle">$HTMLUtil.shorten($song.getAlbumName(), 65)</div>
	</div>
	
	<div class="songInfos">
		<div class="albumInfos">
			<div class="songName">$song.getSongName()</div>
			<div class="artistName">$text['by'] $song.getArtistName()</div>
		</div>
	</div>
	
	<div class="songControls">
		#if ($song.getSongRating() > 0)
			<a class="like liked" href="#">$text['like']</a>
		#else
			<a class="like" href="command://like">$text['like']</a>
		#end
		<a class="ban" href="command://ban">$text['ban']</a>
		<a class="sleep" href="command://sleep">$text['sleep']</a>
	</div>
	
	<div class="songExtras">
		<div id="time" class="time"></div>
		
		<div class="focusTraits">
			<div class="label">$text['traits']: </div>
			<div class="value">
				#foreach ($trait in $song.getFocusTraits())
			        $trait#if ($velocityCount != $song.getFocusTraits().size()), #end
			    #end
			</div>
			<div class="spacer"></div>
		</div>
	</div>
	
	<div class="description">
	</div>
	
	<div class="clear"></div>
</div>

#parse("vm/footer.vm")